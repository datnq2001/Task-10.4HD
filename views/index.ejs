    <main class="container">
        <!-- Welcome Section -->
        <% if (user) { %>
            <div id="welcome" class="text-center bg-dark text-white p-4 rounded">
            <h5>Welcome, <%= user.name %>!</h5>
            <p>You are logged in now.</p>
            </div>
        <% } %>

        <!-- Hero -->
